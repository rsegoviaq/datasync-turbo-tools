# s5cmd Configuration
# Copy this file and customize for your environment
#
# Usage:
#   export $(grep -v '^#' config/s5cmd.env | xargs)
#   ./scripts/datasync-s5cmd.sh

# ============================================================================
# Required Configuration
# ============================================================================

# Source directory to upload
export SOURCE_DIR="/path/to/your/data"

# S3 bucket name (without s3:// prefix)
export S3_BUCKET="datasync-filmflow-20251022"

# S3 subdirectory within bucket (optional)
export S3_SUBDIRECTORY="uploads"

# ============================================================================
# AWS Configuration
# ============================================================================

# AWS Profile (if using named profiles)
export AWS_PROFILE="datasync-test"

# Or use explicit credentials (not recommended, use profiles instead)
# export AWS_ACCESS_KEY_ID="your-access-key"
# export AWS_SECRET_ACCESS_KEY="your-secret-key"
# export AWS_DEFAULT_REGION="us-east-1"

# ============================================================================
# s5cmd Performance Settings
# ============================================================================

# Number of concurrent operations (default: 32)
export S5CMD_CONCURRENCY=32

# Multipart upload part size in MB (default: 64)
export S5CMD_PART_SIZE=64MB

# Number of worker threads (default: 16)
export S5CMD_NUM_WORKERS=16

# ============================================================================
# S3 Upload Settings
# ============================================================================

# Storage class (STANDARD, INTELLIGENT_TIERING, GLACIER, etc.)
export S3_STORAGE_CLASS=STANDARD

# Checksum algorithm (CRC32, CRC32C, SHA1, SHA256, CRC64NVME)
export S5CMD_CHECKSUM_ALGORITHM=CRC64NVME

# Enable checksum verification (true/false)
export S5CMD_CHECKSUM_VERIFY=true

# ============================================================================
# Script Behavior
# ============================================================================

# Retry count for failed operations (default: 3)
export S5CMD_RETRY_COUNT=3

# Log level (debug, info, warn, error)
export S5CMD_LOG_LEVEL=info

# Dry run mode - preview without uploading (true/false)
export DRY_RUN=false
